
    /**
     * 数字运算操作
     * @param SystemUserStatusRequest $request
     * @return ResponseInterface
     * @throws \Psr\Container\ContainerExceptionInterface
     * @throws \Psr\Container\NotFoundExceptionInterface
     */
    #[PutMapping("numberOperation"), Permission("{UPDATE_PERMISSION}"), OperationLog]
    public function numberOperation(): ResponseInterface
    {
        return $this->service->numberOperation(
            (int) $request->input('{PK}'),
            (string) $request->input('{NUMBER_FIELD}'),
            (string) $request->input('{NUMBER_TYPE}', 'inc'),
            (int) $request->input('{NUMBER_VALUE}', 1),
        ) ? $this->success() : $this->error();
    }
